extends ./layout/index

block contenido
    main.container.mt-5        
        h1.text-center.mt-5 #{pagina}  

        blockquote.text-center Lee sobre el cliente y sus experiencias    
        include ./layout/vista_testimoniales
        .row
            .col-md-12
                h2.d-block.w-100.text-center.mt-5 Agrega un Testimonial
                if(errores)
                    each error in errores   
                        .alert.col.alert-danger.text-center= error.mensaje

            .row.justify-content-center.col
                .col-md-8
                    form(action="/testimoniales" method="POST")
                        .form-group
                            label.text-justify(for="nombre") Nombre
                            input#nombre(Type="text", placeholder="Tu Nombre", name="nombre", class="form-control", value= nombre)
                        .form-group
                            label(for="correo") Correo Electronico
                            input#nombre(Type="text", placeholder="Tu Correo", name="correo", class="form-control" value=correo)
                            .form-group 
                                label(for="mensaje") Mensaje
                                textarea#mensaje(name="mensaje", cols="30", rows="3" placeholder="Tu Mensaje" class="form-control"
                                )= mensaje
                        input.btn.btn-success.btn-block(type="submit")

    